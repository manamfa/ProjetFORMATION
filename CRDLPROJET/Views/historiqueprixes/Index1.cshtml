@model IEnumerable<CRDLPROJET.Models.historiqueprix>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color:aqua">
    <h1 style="text-align: center"><strong><u>Historique des Prix</u><br /></strong></h1>

    @*<p class="fa fa-plus btn btn btn-warning">
            @Html.ActionLink("Ajouter", "Create")
        </p>*@
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="98%" style="margin-left:1%">
        <thead>
            <tr>
                <th>
                    No
                </th>
                <th>
                    Nom Produit
                </th>
                <th>
                    Prix de Vente
                </th>

                <th>
                    Date Modification
                </th>
                @*<th>Action</th>*@
            </tr>
        </thead>
        <tbody>
            @{
                int no = 0;
            }
            @foreach (var item in Model)
            {
                no++;
                <tr>
                    <td>
                        @no
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.produit.nomproduit)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.prixdeventeunitaire)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.datemodification)
                    </td>
                    @*<td>

                        @Html.ActionLink("Details", "Details1", new { id = item.historiqueprixID }, new { @class = "btn btn-sm btn-success fa fa-trach" })

                    </td>*@
                </tr>
            }
        </tbody>
    </table>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

</div>
<link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />

<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#example').DataTable();
    });

</script>