@model IEnumerable<CRDLPROJET.Models.historiquefacturation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_Default.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color:aqua">
    <h1 style="text-align: center"><strong><u>Historique des Facturations Clients</u><br /></strong></h1>
    <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        #No
                    </th>
                    <th>
                        Nom
                    </th>
                    <th>
                        Prenom
                    </th>
                    <th>
                        Adresse
                    </th>
                    <th>
                        Telephone
                    </th>
                    <th>
                        Categorie
                    </th>
                    <th>
                        Produit
                    </th>
                    <th>
                        Prix Unitaire
                    </th>
                    <th>
                        Quantité
                    </th>
                    <th>
                        Total
                    </th>
                    <th>
                        Numero Factu
                    </th>
                    <th>
                        Date Factu
                    </th>

                    @*<th>Action Action</th>*@
                </tr>
            </thead>
            <tbody>
                @{
                    int no = 0;
                }
                @foreach (var item in Model)
                {
                    no++;
                    <tr>
                        <td>
                            @no
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.client.nomclient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.client.prenomclient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.client.adresse)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.client.numtel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.produit.categorie.nomcategorie)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.produit.nomproduit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prixunitaire)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantite)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.facturation.facturationID)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.facturation.datefacturation)
                        </td>

                        @*<td>
                            @Html.ActionLink("Modifier", "Edit1", new { id = item.historiquefacturationID }, new { @class = "btn btn-sm btn-primary fa fa-pencil" }) |
                            @Html.ActionLink("Suprimer", "Delete1", new { id = item.historiquefacturationID }, new { @class = "btn btn-sm btn-danger fa fa-trach" })
                        </td>*@

                        <!--<td>
                        <div class="dropdown">
                            <span class="dropdown-toggle dropdown-bg btn btn-outline-primary" role="button" id="dropdownMenuButton5"
                                  data-toggle="dropdown" aria-expanded="false">
                                Actions
                            </span>
                            <div class="dropdown-menu dropdown-menu-right shadow-none" aria-labelledby="dropdownMenuButton5">-->
                                @*@Html.ActionLink("Modifier", "Edit1", new { id = item.historiquefacturationID }, new { @class = "btn btn-sm btn-primary fa fa-pencil" }) |
                                @Html.ActionLink("Suprimer", "Delete1", new { id = item.historiquefacturationID }, new { @class = "btn btn-sm btn-danger fa fa-trach" })*@
                            <!--</div>
                        </div>
                    </td>-->
                    </tr>
                }
            </tbody>
        </table>
        <br><br><br><br><br><br><br><br><br><br><br>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />

<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#example').DataTable();
    });

</script>

