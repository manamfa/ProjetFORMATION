@model IEnumerable<CRDLPROJET.Models.Histofactmodel>

@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Layouts/_Default.cshtml";

}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color:aquamarine">
    <h1 style="text-align: center"><strong><u>Les Frais Vendues Par Jours</u><br /></strong></h1>

    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    #No
                </th>

                <th>
                    Date
                </th>
                <th>
                    Somme Total
                </th>
                <th>
                    Nombre des Factures
                </th>
            </tr>
        </thead>
        <tbody>

            @{
                int no = 0;
            }
            @foreach (CRDLPROJET.Models.Histofactmodel item in Model)
            {
                no++;
                <tr>
                    <td>
                        @no
                    </td>

                    <td>
                        @item.datefac
                    </td>

                    <td>
                        @item.Sommeto &emsp;Fbu
                    </td>
                    <td>
                        @item.factura
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br><br><br><br><br><br><br><br><br><br><br><br><br>
</div>


<link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#example').DataTable();
    });

</script>



