@model IEnumerable<CRDLPROJET.Models.produit>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
@Html.Raw(TempData["msg"])
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color:aquamarine">
    <h1 style="text-align:center"><strong><u>Menu Des Produits</u><br /></strong></h1>
    <p class="fa fa-plus btn btn btn-warning">
        @Html.ActionLink("Ajoute Produit", "Create", null, new { style = "text-decoration:none;" })
    </p>
    <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="98%" style="margin-left:1%">
            <thead>
                <tr>
                    <th>
                        #No
                    </th>
                    <th>
                        Nom
                    </th>
                    <th>
                        Prenom
                    </th>
                    <th>
                        Adresse
                    </th>
                    <th>
                        Telephone
                    </th>
                    <th>
                        Nom Produit
                    </th>
                    <th>
                        Prix de vente
                    </th>
                    <th>
                        Quantite
                    </th>
                    <th>
                        Prix Achat
                    </th>

                    <th>
                        Categorie
                    </th>

                    <th>Option</th>
                </tr>

            </thead>
            <tbody>
                @{
                    int no = 0;
                }
                @foreach (var item in Model)
                {
                    no++;
                    <tr>
                        <td>
                            @no
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fournisseur.nomfournisseur)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fournisseur.prenomfournisseur)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fournisseur.adresse)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fournisseur.tel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nomproduit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prixdeventeunitaire)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantite)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prixunitaireachat)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.categorie.nomcategorie)
                        </td>

                        @*<td>
                                @Html.ActionLink("Modifier", "Edit", new { id = item.produitID }, new { @class = "btn btn-sm btn-primary fa fa-pencil" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.produitID }, new { @class = "btn btn-sm btn-success fa fa-trach" }) |
                                @Html.ActionLink("Suprimer", "Delete", new { id = item.produitID }, new { @class = "btn btn-sm btn-danger fa fa-trach" })
                            </td>*@

                        <td>
                            <div class="dropdown">
                                <span class="dropdown-toggle dropdown-bg btn btn-outline-primary" role="button" id="dropdownMenuButton5"
                                      data-toggle="dropdown" aria-expanded="false">
                                    Actions
                                </span>
                                <div class="dropdown-menu dropdown-menu-right shadow-none" aria-labelledby="dropdownMenuButton5">
                                    @Html.ActionLink("Modifier", "Edit", new { id = item.produitID }, new { @class = "btn btn-sm btn-primary fa fa-pencil" }) |
                                    @*@Html.ActionLink("Details", "Details", new { id = item.produitID }, new { @class = "btn btn-sm btn-success fa fa-trach" }) |*@
                                    @Html.ActionLink("Delete", "Delete", new { id = item.produitID }, new { @class = "btn btn-sm btn-danger fa fa-trach" })

                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#example').DataTable();
    });

</script>
