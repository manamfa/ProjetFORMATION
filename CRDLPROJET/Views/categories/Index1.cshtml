@model IEnumerable<CRDLPROJET.Models.categorie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_Default.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color:aqua">
    <h1 style="text-align:center"><strong><u>Categories Des Produits</u><br /></strong></h1>
    @*<p class="fa fa-plus btn btn btn-warning">
            @Html.ActionLink("Ajoute Categorie", "Create")
        </p>*@

    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="98%" style="margin-left:1%">
        <thead>
            <tr>
                <th>
                    No
                </th>
                <th>
                    Nom Categorie
                </th>
                <th>
                    Date
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int no = 0;
            }
            @foreach (var item in Model)
            {
                no++;
                <tr>
                    <td>
                        @no
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nomcategorie)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateentree)
                    </td>
                    <td>

                        @Html.ActionLink("Details", "Details1", new { id = item.categorieID }, new { @class = "btn btn-sm btn-success fa fa-trach" })

                    </td>
                </tr>
            }
        <tbody>
    </table>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br>   
</div>
<link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#example').DataTable();
    });

</script>


