@model IEnumerable<CRDLPROJET.Models.client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color:aquamarine">
    <h1 style="text-align:center"><strong><u>Liste Des Clients</u><br /></strong></h1>
    @*<p class="fa fa-plus btn btn btn-warning">
            @Html.ActionLink("Ajouter le Client", "Create")

            <br /><br />
        </p>*@
    <p class="btn btn-default" style="color:white">@Html.ActionLink("AjouteClient", "Initialis3", "tableachats", null, new { style = "text-decoration:none;" })<p>

        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="98%" style="margin-left:1%">
                <thead>
                    <tr>
                        <th>
                            #No
                        </th>
                        <th>
                            Nom
                        </th>
                        <th>
                            Prenom
                        </th>
                        <th>
                            Telephone
                        </th>
                        <th>
                            Adresse
                        </th>
                        <th>Actions</th>
                    </tr>

                </thead>
                <tbody>
                    @{
                        int no = 0;
                    }
                    @foreach (var item in Model)
                    {
                        no++;
                        <tr>
                            <td>
                                @no
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nomclient)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.prenomclient)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numtel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.adresse)
                            </td>

                            <td>
                                <div class="dropdown">
                                    <span class="dropdown-toggle dropdown-bg btn btn-outline-primary" role="button" id="dropdownMenuButton5"
                                          data-toggle="dropdown" aria-expanded="false">
                                        Actions
                                    </span>
                                    <div class="dropdown-menu dropdown-menu-right shadow-none" aria-labelledby="dropdownMenuButton5">
                                        @Html.ActionLink("Modfi", "Edit", new { id = item.clientID }, new { @class = "btn btn-sm btn-primary fa fa-pencil" })|
                                        @*@Html.ActionLink("Suprimer", "Delete", new { id = item.clientID }, new { @class = "btn btn-sm btn-danger fa fa-trach" })|*@
                                        <p class="btn btn-default" style="color:white">@Html.ActionLink("Achete", "Initialiser", "tableachats")<p>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
        <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
        <br /><br /><br /><br />
</div>
<link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#example').DataTable();
    });

</script>